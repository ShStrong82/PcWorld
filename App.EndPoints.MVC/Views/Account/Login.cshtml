@model LoginViewModel

@{
    ViewData["Title"] = "ورود";
}


@section HeadContent {
    <link rel="stylesheet" href="~/assets/css/login-style.css" asp-append-version="true" />
}


<div class="login-box">
    <form id="form" asp-controller="Account" asp-action="Login">
        <h2>ورود</h2>

        <div class="input-box">
            <span class="icon"><i class="fas fa-envelope"></i></span>
            <input type="email" placeholder="ایمیل" id="username" asp-for="Email" required />
        </div>

        <div class="input-box">
            <span class="icon"><i class="fa fa-lock"></i></span>
            <input type="password" placeholder="رمز عبور" id="password" asp-for="Password" required />
            <span class="eye">
                <i class="fa-solid fa-eye" id="eyeIcon" onclick="togglePasswordField('password', 'eyeIcon')"></i>
            </span>
        </div>

        <div class="forgot-pass">
            <a href="./forgot-password.html">رمز عبور خود را فراموش کردم</a>
        </div>

        <button type="submit">ورود</button>

        <div class="signup-link">
            <p>حساب کاربری ندارید؟ <a asp-controller="Account" asp-action="Register">ثبت نام</a></p>
        </div>
    </form>
</div>



<script src="https://code.jquery.com/jquery-migrate-3.4.1.min.js"></script>
<script type="text/javascript" src="~/assets/js/globalPasswordToggle.js" asp-append-version="true"></script>

